<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CourseWork.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CourseWork.Views"
    
    Style="{StaticResource Shell}"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"
        Shell.FlyoutBehavior="Disabled"
        Shell.FlyoutItemIsVisible="False"/>

    <FlyoutItem Title="Home">

        <Tab>

            <ShellContent
                ContentTemplate="{DataTemplate local:HomePage}"
                Route="HomePage" />

        </Tab>

    </FlyoutItem>

    <FlyoutItem Title="Progess">

        <Tab>

            <ShellContent
                ContentTemplate="{DataTemplate local:ProgressPage}"
                Route="ProgressPage" />

        </Tab>

    </FlyoutItem>

    <FlyoutItem Title="Tracking - New Program Programme">

        <Tab>

            <ShellContent
                ContentTemplate="{DataTemplate local:CreateWorkoutProgramPage}"
                Route="CreateWorkoutProgramPage" />

        </Tab>

    </FlyoutItem>

    <FlyoutItem Title="Tracking - My Programmes">

        <Tab>

            <ShellContent
                ContentTemplate="{DataTemplate local:UserProgramsPage}"
                Route="UserProgramsPage" />

        </Tab>

    </FlyoutItem>
</Shell>

