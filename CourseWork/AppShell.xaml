<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CourseWork.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CourseWork.Views"
    
    Style="{StaticResource Shell}"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Tracking">

        <Tab>

            <ShellContent
                ContentTemplate="{DataTemplate local:ProgrammesPage}"
                Route="ProgrammesPage" />

        </Tab>

    </FlyoutItem>

    <FlyoutItem Title="Tracking - New Programme">

        <Tab>

            <ShellContent
                ContentTemplate="{DataTemplate local:CreateProgrammePage}"
                Route="CreateProgrammePage" />

        </Tab>

    </FlyoutItem>

    <FlyoutItem Title="Tracking - My Programmes">

        <Tab>

            <ShellContent
                ContentTemplate="{DataTemplate local:UserProgrammesPage}"
                Route="UserProgrammesPage" />

        </Tab>

    </FlyoutItem>


</Shell>

